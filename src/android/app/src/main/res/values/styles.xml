<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Rounded popup menu style -->
    <style name="RoundedPopupMenu" parent="Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu.Rounded</item>
        <item name="popupMenuStyle">@style/PopupMenu.Rounded</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Rounded</item>
    </style>
    
    <style name="PopupMenu.Rounded" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_popup_background</item>
        <item name="android:divider">@drawable/menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    
    <style name="DropDownListView.Rounded" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@drawable/menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources> 